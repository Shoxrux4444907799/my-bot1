    <div id="gameBox">Bos!</div>

    <script>
        const gameBox = document.getElementById("gameBox");
        let count = 0;

        gameBox.addEventListener("click", () => {
            count++;
            gameBox.textContent = count;
            gameBox.style.background = count % 2 === 0 ? "blue" : "red";
        });
    </script>
